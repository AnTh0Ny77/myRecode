            <form method="POST" action="">
                <div class="form-floating my-4 ">
                        <input type="email" class=" input-myRecode-text" name="user__mail" value="{{alert['username']}}" placeholder="Email">
                </div>
                <div class="form-floating my-4">
                    <input type="password" class=" input-myRecode-text" value="{{alert['password']}}" name="user__password"  placeholder="Mot de passe">
                    
                </div>
               <div class="mb-3">
                     <a href="forgot" class="side-link "> Mot de pass oubli√© ? </a>
               </div>
                <button class="btn-myRecode-success  mx-auto" type="submit">Connexion</button>

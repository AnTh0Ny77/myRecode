{% block main %}
{% if alert %}
        <div class="alert alert-recode alert-warning alert-dismissible fade show" role="alert">
            <div class="div-alert">
                <b>
                    {{alert.message}}
                </b>
            </div>   
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
{% endif %}
<div class="background-x5">
    <div class="wrapper-myRecode">
        <h1 class="h1-myRecode">ESPACE CLIENT <span class="tiret-h1">-</span> Gestion de parc </h1>
